            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 3a5 5 0 1 1-4.546 2.914.5.5 0 0 0-.908-.417A6 6 0 1 0 8 2z"/>
                <path d="M8 4.466V.534a.25.25 0 0 0-.41-.192L5.23 2.308a.25.25 0 0 0 0 .384l2.36 1.966A.25.25 0 0 0 8 4.466"/>
            </svg>
        </button>
        <button id="increase-font" class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-100 hover:bg-slate-200 text-slate-700 font-bold text-lg transition-colors" aria-label="Increase font size">+</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Element Selections ---
            const checkboxes = document.querySelectorAll('.progress-checkbox');
            const progressBar = document.getElementById('progressBar');
            const completeButton = document.getElementById('completeButton');
            const certificateButton = document.getElementById('certificateButton');
            const downloadPortfolioButton = document.getElementById('downloadPortfolioButton');
            const completionMessage = document.getElementById('completionMessage');
            const certificateNameInput = document.getElementById('certificateName');
            const totalCheckboxes = checkboxes.length;

            // --- Functions ---
            const updateProgress = () => {
                const checkedCount = document.querySelectorAll('.progress-checkbox:checked').length;
                const progressPercentage = totalCheckboxes > 0 ? (checkedCount / totalCheckboxes) * 100 : 0;
                progressBar.style.width = `${progressPercentage}%`;
            };

            const enableCertificateGeneration = () => {
                completionMessage.classList.remove('hidden');
                certificateButton.disabled = false;
                certificateButton.classList.remove('bg-slate-400', 'cursor-not-allowed');
                certificateButton.classList.add('bg-gradient-to-r', 'from-sky-500', 'to-cyan-500', 'hover:from-sky-600', 'hover:to-cyan-600', 'shadow-md', 'hover:shadow-lg', 'transform', 'hover:scale-105');
            };

            const downloadPortfolio = () => {
                const reflection = document.getElementById('reflection').value;
                const chatbotLinks = document.getElementById('chatbot-links').value;
                
                const portfolioContent = `
My Portfolio - Module 4: Delegating with Generative AI
=====================================================

Written Reflection:
-------------------
${reflection || 'No reflection provided.'}

Chatbot Links:
--------------
${chatbotLinks || 'No links provided.'}
                `;

                const blob = new Blob([portfolioContent.trim()], { type: 'text/plain' });
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = 'AI_Chatbot_Portfolio.txt';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            };

            const generateCertificate = () => {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF({ orientation: 'landscape' });
                const userName = certificateNameInput.value.trim() || 'Your Name Here';
                const date = new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });

                // Certificate Design
                doc.setFillColor(248, 250, 252); // slate-50
                doc.rect(0, 0, 297, 210, 'F');
                doc.setLineWidth(1.5);
                doc.setDrawColor(79, 70, 229); // indigo-600
                doc.rect(10, 10, 277, 190);

                doc.setFontSize(40);
                doc.setFont('helvetica', 'bold');
                doc.setTextColor(30, 41, 59); // slate-800
                doc.text("Certificate of Completion", 148.5, 50, { align: "center" });

                doc.setFontSize(16);
                doc.setFont('helvetica', 'normal');
                doc.text("This is to certify that", 148.5, 70, { align: "center" });

                doc.setFontSize(32);
                doc.setFont('helvetica', 'bold');
                doc.setTextColor(15, 118, 110); // teal-600
                doc.text(userName, 148.5, 95, { align: "center" });

                doc.setFontSize(14);
                doc.setFont('helvetica', 'normal');
                doc.setTextColor(51, 65, 85); // slate-600
                doc.text("has successfully completed the Go Beyond with AI Module:", 148.5, 110, { align: "center" });

                doc.setFontSize(22);
                doc.setFont('helvetica', 'bold');
                doc.setTextColor(30, 41, 59);
                doc.text("Delegating with Generative AI", 148.5, 125, { align: "center" });

                doc.setLineWidth(0.5);
                doc.setDrawColor(100, 116, 139); // slate-500
                doc.line(50, 160, 120, 160);
                doc.line(170, 160, 240, 160);

                doc.setFontSize(12);
                doc.setFont('helvetica', 'normal');
                doc.text("Fajarudin Akbar", 85, 168, { align: "center" });
                doc.setFont('helvetica', 'bold');
                doc.text("Instructor", 85, 174, { align: "center" });

                doc.setFont('helvetica', 'normal');
                doc.text(date, 205, 168, { align: "center" });
                doc.setFont('helvetica', 'bold');
                doc.text("Date of Completion", 205, 174, { align: "center" });
                
                doc.save(`Certificate_${userName.replace(/ /g, '_')}.pdf`);
            };

            // --- FONT SIZE CONTROLLER ---
            const increaseFontBtn = document.getElementById('increase-font');
            const decreaseFontBtn = document.getElementById('decrease-font');
            const resetFontBtn = document.getElementById('reset-font');
            const htmlElement = document.documentElement;

            const initialFontSize = 16; // Base font size in pixels for 1rem
            const minFontSize = 12;
            const maxFontSize = 22;
            let currentFontSize = initialFontSize;

            const updateFontSize = (size) => {
                currentFontSize = Math.max(minFontSize, Math.min(maxFontSize, size));
                htmlElement.style.fontSize = `${currentFontSize}px`;
            };

            increaseFontBtn.addEventListener('click', () => {
                updateFontSize(currentFontSize + 1);
            });

            decreaseFontBtn.addEventListener('click', () => {
                updateFontSize(currentFontSize - 1);
            });

            resetFontBtn.addEventListener('click', () => {
                updateFontSize(initialFontSize);
            });

            // --- Event Listeners ---
            checkboxes.forEach(checkbox => checkbox.addEventListener('change', updateProgress));
            completeButton.addEventListener('click', enableCertificateGeneration);
            downloadPortfolioButton.addEventListener('click', downloadPortfolio);
            certificateButton.addEventListener('click', generateCertificate);

            // --- Initial State ---
            updateProgress();
        });
    </script>
</body>
</html>
