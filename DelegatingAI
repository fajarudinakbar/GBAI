        <!-- Progress Bar and Controls -->
        <div class="bg-white p-6 rounded-lg shadow-sm mt-8">
            <h2 class="text-xl font-semibold mb-4">Module Progress & Completion</h2>
            <div class="w-full bg-gray-200 rounded-full h-4 mb-4">
                <div id="progressBar" class="bg-blue-600 h-4 rounded-full transition-all duration-500" style="width: 0%"></div>
            </div>
            <div class="flex flex-col sm:flex-row gap-4 items-center">
                <button id="completeButton" class="w-full sm:w-auto bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition duration-300">Mark Module as Complete</button>
                <button id="downloadPortfolioButton" class="w-full sm:w-auto bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded transition duration-300">Download Portfolio</button>
            </div>
            <div class="mt-4 pt-4 border-t">
                 <label for="certificateName" class="block text-sm font-medium text-gray-700 mb-2">Your Name for Certificate:</label>
                 <input type="text" id="certificateName" class="block w-full sm:w-1/2 px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Enter your full name">
                 <button id="certificateButton" class="mt-4 w-full sm:w-auto bg-gray-400 text-white font-bold py-2 px-4 rounded cursor-not-allowed" disabled>Generate Certificate</button>
            </div>
             <p id="completionMessage" class="text-green-600 font-semibold mt-4 hidden">Module completed! You can now enter your name and generate your certificate.</p>
        </div>

