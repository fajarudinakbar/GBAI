    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const checkboxes = document.querySelectorAll('.progress-checkbox');
            const progressBar = document.getElementById('progressBar');
            const totalCheckboxes = checkboxes.length;
            const completeButton = document.getElementById('completeButton');
            const certificateButton = document.getElementById('certificateButton');
            const downloadPortfolioButton = document.getElementById('downloadPortfolioButton');
            const completionMessage = document.getElementById('completionMessage');
            const certificateNameInput = document.getElementById('certificateName');

            function updateProgress() {
                const checkedCount = document.querySelectorAll('.progress-checkbox:checked').length;
                const progressPercentage = totalCheckboxes > 0 ? (checkedCount / totalCheckboxes) * 100 : 0;
                progressBar.style.width = `${progressPercentage}%`;
            }

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateProgress);
            });

            completeButton.addEventListener('click', () => {
                completionMessage.classList.remove('hidden');
                certificateButton.disabled = false;
                certificateButton.classList.remove('bg-gray-400', 'cursor-not-allowed');
                certificateButton.classList.add('bg-teal-500', 'hover:bg-teal-600');
            });

            downloadPortfolioButton.addEventListener('click', () => {
                const reflection = document.getElementById('reflection').value;
                const screenshots = document.getElementById('screenshots').value;
                
                const portfolioContent = `
My Portfolio - Module 4: Delegating with Generative AI
=====================================================

Written Reflection:
-------------------
${reflection}

Notes on Screenshots & Conversations:
-------------------------------------
${screenshots}
                `;

                const blob = new Blob([portfolioContent.trim()], { type: 'text/plain' });
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = 'AI_Chatbot_Portfolio.txt';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            });

            certificateButton.addEventListener('click', () => {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF({ orientation: 'landscape' });
                const userName = certificateNameInput.value.trim() || 'Your Name Here';
                const date = new Date().toLocaleDateString();

                // Certificate Border
                doc.setLineWidth(1.5);
                doc.setDrawColor(6, 78, 128); // Dark Blue
                doc.rect(10, 10, 277, 190);

                // Title
                doc.setFontSize(36);
                doc.setFont('helvetica', 'bold');
                doc.setTextColor(51, 51, 51); // Dark Gray
                doc.text("Certificate of Completion", 148.5, 50, null, null, "center");

                // Subtitle
                doc.setFontSize(16);
                doc.setFont('helvetica', 'normal');
                doc.text("This is to certify that", 148.5, 70, null, null, "center");

                // Recipient Name
                doc.setFontSize(32);
                doc.setFont('helvetica', 'bold');
                doc.setTextColor(0, 102, 153); // Teal
                doc.text(userName, 148.5, 95, null, null, "center");

                // Course Info
                doc.setFontSize(14);
                doc.setFont('helvetica', 'normal');
                doc.setTextColor(51, 51, 51);
                doc.text("for successfully completing the Go Beyond with AI Module:", 148.5, 110, null, null, "center");

                doc.setFontSize(20);
                doc.setFont('helvetica', 'bold');
                doc.text("Delegating with Generative AI", 148.5, 125, null, null, "center");

                // Signatures & Date
                doc.setLineWidth(0.5);
                doc.line(50, 160, 120, 160); // Instructor Signature Line
                doc.line(170, 160, 240, 160); // Date Line

                doc.setFontSize(12);
                doc.setFont('helvetica', 'normal');
                doc.text("Fajarudin Akbar", 85, 168, null, null, "center");
                doc.setFont('helvetica', 'bold');
                doc.text("Instructor", 85, 174, null, null, "center");

                doc.setFont('helvetica', 'normal');
                doc.text(date, 205, 168, null, null, "center");
                doc.setFont('helvetica', 'bold');
                doc.text("Date of Completion", 205, 174, null, null, "center");
                
                doc.save(`Certificate_${userName.replace(/ /g, '_')}.pdf`);
            });

            updateProgress();
        });
    </script>
</body>
